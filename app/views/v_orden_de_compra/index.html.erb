<div class="panel panel-default">
  <div class="panel-heading"><h1>Lista órdenes de compra</h1></div>
  <div class="panel-body">
    <br><br>
    <% if @user.ROL_USUARIO == 'A' %>
      <%= link_to 'Ingresar órden de compra', new_orden_de_compra_path, :class => "btn btn-primary", :style=> "color:white;background-color:green;" %>
    <% end %>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Nombre proveedor</th>
          <th>Monto total compra</th>
          <th>Fecha de cotización</th>
          <th>Fecha de compra</th>
          <th>Estado actual</th>
          <th colspan="1"></th>
        </tr>
      </thead>

      <tbody>
        <% @v_orden_de_compra.each do |v_orden_de_compra| %>
          <tr>
            <td><%= v_orden_de_compra.NOMBRE_PROVEEDOR %></td>
            <td>$<%= v_orden_de_compra.MONTO_TOTAL_COMPRA.to_i %></td>
            <td><%= v_orden_de_compra.FECHA_COTIZACION %></td>
            <td><%= v_orden_de_compra.FECHA_COMPRA %></td>
            <td><%= v_orden_de_compra.ESTADO_ACTUAL %></td>
            <td>
            <div class="btn-group" role="group" >
              <%= link_to 'Mostrar', v_orden_de_compra, :class => "btn btn-primary", :style=> "color:white;background-color:green;width:100px;" %>
              <% if current_usuario.ROL_USUARIO == 'A'%>
                <% @orden_de_compra.each do |orden_de_compra|%>
                  <%if orden_de_compra.ID_COMPRA==v_orden_de_compra.ID_COMPRA%>
                      <%= link_to 'Editar', edit_orden_de_compra_path(orden_de_compra), :class => "btn btn-default", :style=>"width:100px;" %>
                  <%end%>
                <%end%>
              <%end%>
            </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <% if current_usuario.ROL_USUARIO == 'A'%>
      <%= link_to 'Volver', compra_insumos_index_path, :class => "btn btn-default", :style=>"width:100px;"%>
    <%end%>
    <br>
  </div>
</div>