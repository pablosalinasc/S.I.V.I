<div class="container">
  <div class="panel panel-default col-xs-6 col-centered">
    <div class="panel-heading"><h2>Registro</h2></div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="field">
          <%= f.label :nombre_usuario %><br />
          <%= f.text_field :NOMBRE_USUARIO, autofocus: true,:class=>"form-control" %>
        </div>

        <div class="field">
          <%= f.label :rut_usuario %><br />
          <%= f.text_field :RUT_USUARIO, :class=>"form-control" %>
        </div>

        <div class="field">
          <%= f.label :fecha_nacimiento %><br />
          <%= f.date_field :FECHA_NACIMIENTO_USUARIO, :class=>"form-control" %>
        </div>

        <div class="field">
          <%= f.label :telefono_usuario %><br />
          <%= f.telephone_field :TELEFONO_USUARIO, :class=>"form-control" %>
        </div>

        <div class="field">
          <%roles={"Vendedor"=>"V","Bodeguero"=>"B","Administrador"=>"A"}%>
          <%= f.label :ROL_USUARIO, "Rol de usuario" %><br>
          <%= f.select :ROL_USUARIO,roles, :class => "form-control", :include_blank => true  %>
        </div>
        <div class="field">
          <%= f.label :DIRECCION_LOCAL, "Local *" %><br>
          <%= f.collection_select :ID_LOCAL, Local.all, :id, :DIRECCION_LOCAL %><br>
        </div>
        <div class="field">
          <%= f.label :email, "Correo *" %><br />
          <%= f.email_field :email, :class=>"form-control" %>
        </div>

        <div class="field">
          <%= f.label :password, "Contraseña *" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off", :class=>"form-control" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Confirmación de contraseña" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"form-control" %>
        </div>


        <div class="actions">
          <%= f.submit "Registrarse", :class=>"btn bin-primary", :style=>"background-color:green;color:white;" %>
        </div>

      <% end %>

    </div>
  </div>
</div>