<p id="notice"><%= notice %></p>
<div class="panel panel-default">
  <div class="panel-heading"><h1>Detalle tipo insumo</h1></div>
  <div class="panel-body" >

		<p id="notice"><%= notice %></p>
		<div class="row">
			  <p class="col-xs-2" style="font-weight: bold;">Nombre insumo:</p>
			  <p class="col-xs-2"><%= @tipo_insumo.NOMBRE_INSUMO %></p>
		</div>
		<div class="row">
			  <p class="col-xs-2" style="font-weight: bold;">Compatibilidad insumo:</p>
			  <p class="col-xs-2">

			  	<% if @tipo_insumo.COMPATIBILIDAD_INSUMO %>
			  		Posee
			  	<% else %>
			  		No posee
			  	<% end %>

			  </p>
		</div>

		<br>

		<div class="row">
      <div class="col-xs-6">
        <h4 style="font-weight: bold">Insumos de este tipo</h4>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th><strong>Nombre insumo</strong></th>
              <th><strong>Precio</strong></th>
            </tr>
          </thead>

          <tbody>
            <% @insumo.each do |insumo| %>
              <tr>
                <% if @tipo_insumo.ID_TIPO_INSUMO == insumo.ID_TIPO_INSUMO %>
                  <td><%= insumo.NOMBRE_UNICO_INSUMO %></td>
                  <td>$<%= insumo.PRECIO_INSUMO %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <br>
    </div>

		
  	<div class="btn-group" role="group" >
			<%= link_to 'Editar', edit_tipo_insumo_path(@tipo_insumo), :class => "btn btn-primary", :style=> "color:white;background-color:green;width:100px;" %>
			<%= link_to 'Volver', tipo_insumo_index_path, :class => "btn btn-default", :style=>"width:100px;" %>		
		</div>
	</div>
</div>