<div class="panel panel-default">
  <div class="panel-heading"><h1>Lista de tipos de insumo</h1></div>

  <div class="panel-body" >
    <br><br>
    <%= link_to 'Agregar nuevo Tipo insumo', new_tipo_insumo_path, :class => "col-xs-2 btn btn-primary", :style=>"margin-left:20px;color:white;background-color:green"%>
    <br><br>
  </div>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Tipo insumo</th>
        <th>Compatibilidad insumo</th>
        <th colspan="1"></th>
      </tr>
    </thead>

    <tbody>
      <% @tipo_insumo.each do |tipo_insumo| %>
        <tr>
          <td><%= tipo_insumo.NOMBRE_INSUMO %></td>
          <td>
            <%if tipo_insumo.COMPATIBILIDAD_INSUMO %>
              Posee
            <%else%>
              No posee
            <% end -%>
          </td>
          <td>
            <div class="btn-group" role="group" >
              <%= link_to 'Detalles',tipo_insumo, :class => "btn btn-primary", :style=> "color:white;background-color:green;width:100px;" %>   
              <%=  link_to 'Editar', edit_tipo_insumo_path(tipo_insumo), :class => "btn btn-default", :style=>"width:100px;" %>    
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table><br>
</div>

<br><br>
