<div class="panel panel-default">
  <div class="panel-heading"><h1>Detalle guía de despacho</h1></div>
  <div class="panel-body" >

    <p id="notice"><%= notice %></p>
    <div class="row">
        <p class="col-xs-2" style="font-weight: bold;">Número de compra</p>
        <p class="col-xs-2"><%= @v_guia_despacho.ID_COMPRA %></p>
    </div>
    <div class="row">
        <p class="col-xs-2" style="font-weight: bold;">Fecha de salida</p>
        <p class="col-xs-2"><%= @v_guia_despacho.FECHA_SALIDA_GUIA %></p>
    </div>
    <div class="row">
        <p class="col-xs-2" style="font-weight: bold;">Fecha de recepcion</p>
        <p class="col-xs-2"><%= @v_guia_despacho.FECHA_RECEPCION_GUIA %></p>
    </div>
    <div class="row">
        <p class="col-xs-2" style="font-weight: bold;">Tipo de movimiento</p>
        <p class="col-xs-2"><%= @v_guia_despacho.TIPO_MOVIMIENTO_GUIA %></p>
    </div>
    <% if current_usuario.ROL_USUARIO!='B'%>
      <div class="row">
          <p class="col-xs-2" style="font-weight: bold;">Nombre bodeguero encargado</p>
          <p class="col-xs-2"><%= @v_guia_despacho.NOMBRE_BODEGUERO_ENCARGADO %></p>
      </div>
      <div class="row">
          <p class="col-xs-2" style="font-weight: bold;">Destino despacho</p>
          <p class="col-xs-2">
            <%if @v_guia_despacho.DESPACHO_LOCAL_GUIA == true %>
              <%= @v_guia_despacho.LOCAL_DESPACHO %>
            <%else%>
              <%= @v_guia_despacho.DESTINO_GUIA %>
            <%end%>
          </p>
      </div>
    <%end%>
    <div class="row">
        <p class="col-xs-2" style="font-weight: bold;">Proveedor</p>
        <p class="col-xs-2"><%= @v_guia_despacho.NOMBRE_PROVEEDOR %></p>
    </div>
    <div class="row">
        <p class="col-xs-2" style="font-weight: bold;">Vehículo guía</p>
        <p class="col-xs-2"><%= @v_guia_despacho.VEHICULO_GUIA %></p>
    </div>
    <br><br>
    <h4 style="font-weight: bold">Lista de insumos a despachar</h4>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Línea guia</th>
          <th>Nombre insumo</th>
          <th>Código insumo</th>
          <th>Cantidad</th>
          <th>Precio</th>
        </tr>
      </thead>

      <tbody>
        <% @v_detalle_guia.each do |v_detalle_guia| %>
          <tr>
            <%if v_detalle_guia.ID_GUIA_DESPACHO==@v_guia_despacho.ID_GUIA_DESPACHO%>
              <td><%= v_detalle_guia.LINEA_GUIA %></td>
              <td><%= v_detalle_guia.NOMBRE_UNICO_INSUMO %></td>
              <td><%= v_detalle_guia.CODIGO_INSUMO %></td>
              <td><%= v_detalle_guia.CANTIDAD_GUIA %></td>
              <td>$<%= v_detalle_guia.PRECIO_GUIA %></td>
            <%end%>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br><br>
    <div class="btn-group" role="group" >
      <% if current_usuario.ROL_USUARIO == 'A' %>
        <%= link_to 'Editar',edit_v_guia_despacho_path(@v_guia_despacho), :class => "btn btn-primary", :style=> "color:white;background-color:green;width:100px;" %>
      <% end %>
      <%= link_to 'Volver', v_guia_despacho_index_path, :class => "btn btn-default", :style=>"width:100px;" %>    
    </div>
  </div>
</div>