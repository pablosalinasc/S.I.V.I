<div class="panel panel-default">
  <div class="panel-heading">
    <h1>Lista de marcas de impresora</h1>
  </div>
  <div class="panel-body">
    <br>
    <%= link_to 'Ingresar marca', new_marca_path, :class => "col-xs-2 btn btn-primary", :style=>"margin-left:20px;color:white;background-color:green" %>
    <br><br>
    <div class="row">
    <div class="col-xs-6">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Nombre</th>
          <th colspan="1"></th>
        </tr>
      </thead>

      <tbody>
        <% @marca.each do |marca| %>
          <tr>
            <td><%= marca.NOMBRE_MARCA %></td>
            <td>
              <div class="btn-group" role="group" >
                <%= link_to 'Editar', edit_marca_path(marca), :class => "btn btn-primary", :style=> "color:white;background-color:green;width:100px;" %>
                <%= link_to 'Eliminar', marca, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-danger", :style=>"width:100px;" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
    </div>
    <br>
    <div class="row">
    <%= link_to 'Volver', v_stock_insumo_index_path, :class => "btn btn-default col-xs-2", :style=>"padding-left:20px;width:100px;" %>
    </div>
  </div>
</div>