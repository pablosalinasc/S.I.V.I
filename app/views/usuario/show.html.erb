<div class="panel panel-default">
  <div class="panel-heading"><h1>Detalle Personal</h1></div>
  <div class="panel-body">
    <p id="notice"><%= notice %></p>

    <% if @usuario.ROL_USUARIO == 'B' %>
      <% @v_resumen_bodeguero.each do |v_resumen_bodeguero| %>
        <% if @usuario.ID_USUARIO == v_resumen_bodeguero.ID_USUARIO %>
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Nombre usuario</th>
                <th>Rol usuario</th>
                <th>Ventas despachadas</th>
                <th>Compras almacenadas</th>
                <th colspan="1"></th>
              </tr>
            </thead>

            <tbody>
                <tr>
                  <td><%= v_resumen_bodeguero.NOMBRE_USUARIO %></td>
                  <td>Bodeguero</td>
                  <td><%= v_resumen_bodeguero.VENTAS %></td>
                  <td><%= v_resumen_bodeguero.COMPRAS %></td>
                </tr>
            </tbody>
          </table>
          <br>
        <% end -%>
      <% end -%>
    <% end -%>

    <% if @usuario.ROL_USUARIO == 'V' %>
      <% @v_resumen_vendedor.each do |v_resumen_vendedor| %>
        <% if @usuario.ID_USUARIO == v_resumen_vendedor.ID_USUARIO %>
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Nombre usuario</th>
                <th>Rol usuario</th>
                <th>Ventas realizadas</th>
                <th>Devoluciones realizadas</th>
                <th colspan="1"></th>
              </tr>
            </thead>

            <tbody>
                <tr>
                  <td><%= v_resumen_vendedor.NOMBRE_USUARIO %></td>
                  <td>Vendedor</td>
                  <td><%= v_resumen_vendedor.VENTAS %></td>
                  <td><%= v_resumen_vendedor.DEVOLUCIONES %></td>
                </tr>
            </tbody>
          </table>
          <br>
        <% end -%>
      <% end -%>
    <% end -%>
    <br>
    <%= link_to 'Volver', usuario_index_path, :class => "btn btn-default", :style=>"width:100px;" %>
    <br>
  </div>
</div>
