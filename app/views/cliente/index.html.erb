<div class="panel panel-default">
  <div class="panel-heading"><h1>Lista de clientes</h1></div>
  <div class="panel-body" >
  <br><br>
  <%= link_to 'Ingresar cliente', new_cliente_path , :class => "col-xs-2 btn btn-primary", :style=>"margin-left:20px;color:white;background-color:green;"%>
  <br><br>
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Nombre cliente</th>
        <th>Rut cliente</th>
        <th>Correo cliente</th>
        <th>Fecha de nacimiento</th>
        <th>Descuento cliente</th>
        <th>Compras realizadas</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cliente.each do |cliente| %>
        <tr>
          <td><%= cliente.NOMBRE_CLIENTE %></td>
          <td><%= cliente.RUT_CLIENTE %></td>
          <td><%= cliente.CORREO_CLIENTE %></td>
          <td><%= cliente.FECHA_NACIMIENTO_CLIENTE %> a√±os</td>
          <td><%= cliente.DESCUENTO_CLIENTE*100 %>%</td>
          <td>
            <div class="btn-group" role="group" >
            <%= link_to 'Mostrar', cliente, :class => "btn btn-primary", :style=>"background-color:green;width:100px;" %>
            <%= link_to 'Editar', edit_cliente_path(cliente), :class => "btn btn-default", :style=>"width:100px;" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br><br>
</div>