<div class="panel panel-default">
  <div class="panel-heading"><h1>Lista de clientes</h1></div>
  <div class="panel-body" >
  <br><br>
  <%= link_to 'Ingresar cliente', new_v_resumen_cliente_path , :class => "col-xs-2 btn btn-primary", :style=>"margin-left:20px;color:white;background-color:green;"%>
  <br><br>
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Id cliente</th>
        <th>Nombre cliente</th>
        <th>Rut cliente</th>
        <th>Correo cliente</th>
        <th>Telefono cliente</th>
        <th>Edad</th>
        <th>Descuento cliente</th>
        <th>Ventas</th>
        <th>Devoluciones</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @v_resumen_cliente.each do |v_resumen_cliente| %>
        <tr>
          <td><%= v_resumen_cliente.ID_CLIENTE %></td>
          <td><%= v_resumen_cliente.NOMBRE_CLIENTE %></td>
          <td><%= v_resumen_cliente.RUT_CLIENTE %></td>
          <td><%= v_resumen_cliente.CORREO_CLIENTE %></td>
          <td><%= v_resumen_cliente.TELEFONO_CLIENTE %></td>
          <td><%= v_resumen_cliente.EDAD %></td>
          <td><%= v_resumen_cliente.DESCUENTO_CLIENTE %></td>
          <td><%= v_resumen_cliente.VENTAS %></td>
          <td><%= v_resumen_cliente.DEVOLUCIONES %></td>
          <td>
            <div class="btn-group" role="group" >
            <%= link_to 'Mostrar', v_resumen_cliente, :class => "btn btn-primary", :style=>"background-color:green" %>
            <%= link_to 'Editar', edit_v_resumen_cliente_path(v_resumen_cliente), :class => "btn btn-default" %>
            <%= link_to 'Destruir', v_resumen_cliente, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-danger"%>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br><br>
</div>