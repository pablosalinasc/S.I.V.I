<div class="panel panel-default">
  <div class="panel-heading"><h1>Lista de ventas</h1></div>
  <div class="panel-body" >
    <br><br>
    <%= link_to 'Ingresar Venta', new_v_venta_path , :class => "col-xs-2 btn btn-primary", :style=>"margin-left:20px;color:white;background-color:green"%>
    <br><br>
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>NÃºmero de boleta</th>
        <th>Nombre vendedor</th>
        <th>Nombre cliente</th>
        <th>Direccion local</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @v_venta.each do |v_venta| %>
        <tr>
          <td><%= v_venta.NUMERO_BOLETA_VENTA %></td>
          <td><%= v_venta.NOMBRE_VENDEDOR %></td>
          <td><%= v_venta.NOMBRE_CLIENTE %></td>
          <td><%= v_venta.DIRECCION_LOCAL %></td>
          <td>
            <div class="btn-group" role="group" >
            <%= link_to 'Mostrar', v_venta, :class => "btn btn-primary", :style=> "color:white;background-color:green;" %>
            <%= link_to 'Editar', edit_v_venta_path(v_venta), :class => "btn btn-default" %>
            <%= link_to 'Destruir',  v_venta, method: :delete, data: { confirm: 'Are you sure?' }  , :class => "btn btn-danger", :style=> "color:white;"%>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>
